    {{ form_widget(form.parameters) }}
{% endblock %}

{# By default, collection uses the form_widget block to create its markup, but we want a table #}
{% block collection_widget %}
    {% spaceless %}
        {#
         # This is almost a copy/paste of jquery.collection.html.twig, we can't use it as it also
         # use form_widget. Note that we also use form_widget(prototype) instead of form_row(prototype)
         # to avoid generating extra markup.
         #}
        {% if prototype is defined %}
            {% set attr = attr|merge({'data-prototype': form_widget(prototype)}) %}
            {% set attr = attr|merge({'data-prototype-name': prototype.vars.name}) %}
        {% endif %}
        {% set attr = attr|merge({'data-allow-add': allow_add ? 1 : 0}) %}
        {% set attr = attr|merge({'data-allow-remove': allow_delete ? 1 : 0 }) %}
        {% set attr = attr|merge({'data-name-prefix': full_name}) %}

        {# Don't forget to add the collection attributes in your markup #}
        <table {{ block('widget_attributes') }}>
            <thead>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.order' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.name' | trans }}</th>
                {% if not form[0].odxSts02.vars.value %}
                    <th>{{ 'configuration.partials.form.odx2.twig.formTheme.odx' | trans }}</th>
                {% endif %}
                <th class="protocol">{{ 'configuration.partials.form.odx2.twig.formTheme.protocol' | trans }}</th>
                <th class="udsId">{{ 'configuration.partials.form.odx2.twig.formTheme.udsId' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.rwc' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.type' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.coding' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.bigEndian' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.bytes' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.factor' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.offset' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.unit' | trans }}</th>
                <th class="value">{{ 'configuration.partials.form.odx2.twig.formTheme.value' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.hex' | trans }}</th>
                <th id="global" style="display: none">{{ 'configuration.partials.form.odx2.twig.formTheme.global' | trans }}</th>
                <th id="dynamic" style="display: none">{{ 'configuration.partials.form.odx2.twig.formTheme.dynamic' | trans }}</th>
{#                <th id="coc" style="display: none">{{ 'configuration.partials.form.odx2.twig.formTheme.coc' | trans }}</th>#}
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.defaultType' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.start' | trans }}</th>
                <th>{{ 'configuration.partials.form.odx2.twig.formTheme.stop' | trans }}</th>
            </thead>
            <tbody>
            {#
             # we can't form_widget(form) as it would render parent markup for a collection, so
             # we iterate manually on children
             #}
            {% for item in form %}
                {{ form_widget(item) }}
            {% endfor %}
            </tbody>
        </table>
    {% endspaceless %}
{% endblock %}

{% block Odx2ParameterType_widget %}
    {# widget_attributes will generate class="item" from the DiscountCollectionType.entry_options configuration #}
    {% set nonAddableParameters =
        [
            constant('App\\Enum\\Entity\\EcuSwParameterTypes::ECU_PARAMETER_TYPE_HW'),
            constant('App\\Enum\\Entity\\EcuSwParameterTypes::ECU_PARAMETER_TYPE_SW'),
        ]
    %}
    {% set nonRemovableParameters =
        [
            constant('App\\Enum\\Entity\\EcuSwParameterTypes::ECU_PARAMETER_TYPE_HW'),
            constant('App\\Enum\\Entity\\EcuSwParameterTypes::ECU_PARAMETER_TYPE_SW'),
            constant('App\\Enum\\Entity\\EcuSwParameterTypes::ECU_PARAMETER_TYPE_SERIAL'),
        ]
    %}
    <tr class="parameter" {{ block('widget_attributes') }}>
        {{ form_widget(form.parameterId) }}
        {{ form_widget(form.overwrittenValueSetId) }}
        {{ form_widget(form.headerProtocol) }}
        {{ form_widget(form.variableType) }}
        {{ form_widget(form.linkingType) }}
        {{ form_widget(form.bytes) }}
        {{ form_widget(form.type) }}
        <td>{{ form.order.vars.value | orderForReservedParameter(form.order.vars.value) }}</td>
        {% if not form.odxSts02.vars.value %}
            <td class="centerColumnExtra">
                {% if form.serialState is defined %}
                    {{ form.name.vars.value }}&nbsp;<input type="checkbox" name="serial"
                        {{ (form.serialState.vars.value)? 'checked': '' }} disabled>
                {% else %}
                    {{ form.name.vars.value }}
                {% endif %}
            </td>
        {% endif %}
        <td class="centerColumn">
            {% if form.odx1.vars.value == 1 %}
            <span class="odx_yes">{{ 'configuration.partials.form.odx2.twig.formTheme.yes' | trans }}</span>
            {% else %}
            <span class="odx_no">{{ 'configuration.partials.form.odx2.twig.formTheme.no' | trans }}</span>
            {% endif %}
        </td>
        <td class="protocolValue">
                {{ form.protocol.vars.value }}
        </td>
        <td class="udsIdValue">{{ form.udsId.vars.value }}</td>
        <td class="rights">
            {{ (form.read.vars.value)? ('configuration.partials.form.odx1.twig.formTheme.r' | trans) : '' }}
            {% if form.write is defined %}
                {{ (form.write.vars.value)? ('configuration.partials.form.odx1.twig.formTheme.w' | trans) : '' }}
            {% endif %}
            {% if form.confirm is defined %}
                {{ (form.confirm.vars.value)? ('configuration.partials.form.odx1.twig.formTheme.c' | trans) : '' }}
            {% endif %}
        </td>
        <td class="variableType">{{ form.variableType.vars.value }}</td>
        <td>{{ form.coding.vars.value }}</td>
        <td class="centerColumn">
            {{ (form.bigEndian.vars.value) ?
            ('configuration.partials.view.odx2.twig.viewParameters.trueTxt' | trans)
            : ('configuration.partials.view.odx2.twig.viewParameters.falseTxt' | trans) }}
        </td>
        <td class="variableTypeId">{{ form.variableTypeId.vars.value  }}</td>
        <td>{{ form.bytes.vars.value }}</td>
        <td>{% if form.factor is defined %}
                {{ form.factor.vars.value }}
            {% endif %}
        </td>
        <td>
            {% if form.offset is defined %}
                {{ form.offset.vars.value }}
            {% endif %}
        </td>
        <td>
            {% if form.unit is defined %}
                {{ form.unit.vars.value }}
            {% endif %}
        </td>
        {% if form.linkingType.vars.value == 1 %}
            <td class="valueString">{% if form.valueString is defined %}{{ form_widget(form.valueString) }}{% endif %}</td>
            <td class="valueInteger">{% if form.valueInteger is defined %}{{ form_widget(form.valueInteger)}}{% endif %}</td>
            <td class="valueUnsigned">{% if form.valueUnsigned is defined %}{{ form_widget(form.valueUnsigned)}}{% endif %}</td>
            <td class="valueBlob">{% if form.valueBlob is defined %}{{ form_widget(form.valueBlob)}}{% endif %}</td>
            <td class="centerColumn valueBool">{% if form.valueBool is defined %}{{ form_widget(form.valueBool)}}{% endif %}</td>
        {% elseif form.linkingType.vars.value == 2 %}
            <td class="valueString">
                {% if form.valueString.vars.value is not null %}
                    {{ form.valueString.vars.value  }}
                {% endif %}
            </td>
            <td class="valueInteger">
                {% if form.valueInteger.vars.value is not null %}
                    {{ form.valueInteger.vars.value  }}
                {% endif %}
            </td>
            <td class="valueUnsigned">
                {% if form.valueUnsigned.vars.value is not null %}
                    {{ form.valueUnsigned.vars.value  }}
                {% endif %}
            </td>
            <td class="centerColumn valueBool">
                {% if form.valueBool.vars.value is not null %}
                    {{ (form.valueBool.vars.value) ?
                    ('configuration.partials.form.odx2.twig.formTheme.trueTxt' | trans)
                    : ('configuration.partials.form.odx2.twig.formTheme.falseTxt' | trans) }}
                {% endif %}
            </td>
        {% elseif form.linkingType.vars.value == 3 %}
            <td>
                {% if form.linkedValueName.vars.value is not null %}
                    {{ form.linkedValueName.vars.value }}
                {% endif %}
            </td>
        {% elseif form.linkingType.vars.value == 4 %}
            <td>
                {% if form.linkedValueName.vars.value  is not null %}
                    {{ form.linkedValueName.vars.value }}
                {% endif %}
            </td>
{#        {% elseif form.linkingType.vars.value == 5 %}#}
{#            <td>#}
{#                {% if form.linkedValueName.vars.value   is not null %}#}
{#                    {{ form.linkedValueName.vars.value }}#}
{#                {% endif %}#}
{#            </td>#}
        {% endif %}
        <td>{{ (form.valueHex.vars.value is not null)? '0x'~form.valueHex.vars.value : '' }}</td>
        <td class="linkingType">{% if form.linkingTypeName is defined %}{{ form.linkingTypeName.vars.value }}{% endif %}</td>
        <td>{{ form.startBit.vars.value }}</td>
        <td>{{ form.stopBit.vars.value }}</td>
    </tr>
{% endblock %}

