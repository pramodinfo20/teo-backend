{% form_theme parametersForm 'Configuration/partials/form/odx1/formTheme.html.twig' %}

{% set saveActionUrl = legacyUrl(currentLegacyUrl, {'method': 'saveParameters'}, true) %}
{{ form(parametersForm, {'action': saveActionUrl, 'method': 'POST', 'attr': {'id': 'odx1ParametersForm'}}) }}

{% block javascripts %}
    {{ include('Configuration/partials/form/js/formJs.html.twig', {'odx': 1}) }}
{% endblock %}

{% block stylesheets %}
    <style>
        form[name='Odx1ParameterCollectionType'] {
            margin-bottom: 10px;
        }

        .hideAction {
            display: none;
        }

        .centerColumn a {
            text-align: center;
        }

        .hidden {
            visibility: hidden;
        }

        .variableTypeId {
            display: none;
        }
    </style>
{% endblock %}