{% trans_default_domain 'messages' %}
{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <h1>{{ 'configuration.twig.index.header' | trans }}</h1>
        <div class="row">

            <div class="columns four custom-skeleton">
                {% include 'Configuration/partials/search.html.twig' with {select_button_available : true, search : search} %}
            </div>

            <div class="columns seven custom-skeleton">
                <div id="result_page">
                    {% if parameters is empty %}
                        {#                {% include 'Configuration/partials/header.html.twig' %}#}
                        <div class="infoBlock">
                            <h4>{{ 'configuration.twig.index.infoBlock' | trans }}</h4>
                        </div>
                    {% else %}
                        {% include 'Common/Configuration/subconfiguration.html.twig' %}
                        <br />

                        <fieldset class="shrink">
                            <legend>Parameters</legend>

                            <div class="row">
                                <div class="parameters">
                                    <div class="parametersHeader">
                                        {% if mode == 1 and header is not empty %}
                                            {% include 'Configuration/partials/header.html.twig' with {'header': header} %}
                                        {% elseif mode == 2 and header is not empty %}
                                            {% include 'Configuration/partials/form/header/editParameter.html.twig' with {'form': headerForm} %}
                                        {% endif %}
                                    </div>
                                    <div class="parametersValues">
                                        {% if odx == 1 and mode == 1 and sw is not null %}
                                            {% include 'Configuration/partials/view/odx1/viewParameters.html.twig' with {'parameters': parameters, 'odxSts02' : header.odxSts02} %}
                                        {% elseif odx == 1 and mode == 2 and sw is not null %}
                                            {% include 'Configuration/partials/form/odx1/editParameters.html.twig' with {'parameters': parameters, 'odxSts02' : header.odxSts02} %}
                                        {% elseif odx == 2 and mode == 1 and sw is not null %}
                                            {% include 'Configuration/partials/view/odx2/viewParameters.html.twig' with {'parameters': parameters, 'odxSts02' : header.odxSts02} %}
                                        {% elseif odx == 2 and mode == 2 and sw is not null %}
                                            {% include 'Configuration/partials/form/odx2/editParameters.html.twig' with {
                                                'parameters': parameters, 'odxSts02' : header.odxSts02} %}
                                        {% endif %}
                                    </div>
                                </div>
                                {% if sw is not null %}
                                    {% with
                                        {
                                        'ecu': ecu,
                                        'sw': sw,
                                        'odx': odx,
                                        'protocol': header.protocol.ecuCommunicationProtocolName,
                                        'parametersButtonsState': parametersButtonsState,
                                        'supportOdx2': supportOdx2,
                                        'mode' : mode,
                                        } %}
                                        {% include 'Configuration/partials/menu/footer.html.twig' %}
                                    {% endwith %}
                                {% endif %}
                            </div>
                        </fieldset>

                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {% include 'History/partials/dialog/saveHistoryExceptionWindow.html.twig' %}
    {% include 'Vehicles/Configuration/partials/saveDataValidationError.html.twig' %}
    {% include 'History/partials/common/historyComment.html.twig' with {'form': commentForm, 'id' : sw, 'type' : historyType} %}

    {% if sw is null %}
        {% include 'Vehicles/Configuration/partials/availableOptionsForProperty.html.twig' %}
    {% endif %}
{% endblock %}

{% block stylesheets %}
    <style>
        .parametersValues{
            width: 100%;
            max-height: 550px;
            overflow-x: auto;
            overflow-y: auto;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .parametersHeader table tr {
            background: white;
        }


        .shrink {
            width: 99%;
            min-width: 0;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .version_header tr td:nth-child(odd) {
            font-weight: bold;
        }

        .parameters_table thead {
            font-weight: bold;

        }

        .parameters_table tbody tr:nth-child(1), .odx1-table tbody tr:nth-child(1), .odx2-table tbody tr:nth-child(1) {
            background-color: #e2e2ff;
        }

        .parameters_table tbody tr:nth-child(2), .odx1-table tbody tr:nth-child(2), .odx2-table tbody tr:nth-child(2) {
            background-color: #d0d0ff;
        }

        .odx2_table tbody tr:nth-child(3), .odx2-table tbody tr:nth-child(3) {
            background-color: #d0d0b0;
            border-top: 5px solid #bbb;
            border-bottom: 5px solid #bbb;
        }

        .horizontalMenuButtons {
            border: 1px solid #b0b0b0;
            height: auto;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0px 5px;
        }

        .submenu_ul li {
            margin-bottom: 0px !important;
            padding: 5px 0px;
        }

        .MiniButtons {
            text-align: center;
        }


        .parameters_table {
            margin-bottom: 10px;
        }

        .odxVersion {
            margin-bottom: 10px;
        }

        .centerColumn {
            text-align: center;
        }

        .centerColumnExtra input {
            vertical-align: middle;
        }

        .odx_yes {
            width: 50px;
            background: linear-gradient(to bottom, #008800 0, #668844 90%, #008800 100%);
            color: #ddffdd;
            display: inline-block;
            font-family: 'RobotoBold';
            border-radius: 5px;
            text-align: center;
        }

        .odx_no {
            width: 50px;
            display: inline-block;
            background: linear-gradient(to bottom, #880000 0, #884400 90%, #880000 100%);
            color: #ffdddd;
            font-family: 'RobotoBold';
            border-radius: 5px;
            text-align: center;
        }

        .clone_yes {
            color: #668844;
        }

        .clone_no {
            color: #884400;
        }

         .variableTypeId {
             display: none;
         }

        .odxSts02 {
            display: none;
        }
    </style>
{% endblock %}

{% block javascripts %}

    <script>
        $(document).ready(function () {
            $(document).on('change', 'input[name="odx"]', function () {
                $('#select_odx_form').submit();
            });

            {% if sw is null %}
                $(document).on('click', "a[name='parameter[]']", function () {
                    subVehicleId = $('#subVehicleConfigurationId').attr('data-id');
                    getListOfAvailableOptions(this.id);
                });

                function getListOfAvailableOptions(propertyId) {
                    $.ajax({
                        method: "GET",
                        url: "index.php",
                        data: {
                            action: 'parameterSettings',
                            call: 'ajaxGetListOfAvailableOptionsForProperty',
                            propertyId: propertyId
                        },
                        dataType: "json",
                        success: function (ajaxResultData) {
                            availableOptionsDialog(ajaxResultData);
                        }
                    });
                }
            {% endif %}
        });
    </script>

{% endblock %}