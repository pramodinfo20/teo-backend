{% extends 'base.html.twig' %}
{% trans_default_domain 'messages' %}

{% block title %}{{ 'parameters.twig.new.title' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'parameters.twig.new.header' | trans }}</h1>

    {{ include('Parameters/CoC/_form.html.twig') }}

    <a href="{{ legacyUrl(previousLegacyUrl) }}">{{ 'parameters.twig.new.backToList' | trans }}</a>
    {{ include('Parameters/CoC/saveDataValidationError.html.twig') }}
{% endblock %}

{% block javascripts %}
    <script>
        function save() {
            $.ajax({
                method: 'POST',
                data: $('#saveCoC').serialize(),
                url: 'index.php?action=cocParameters&method=saveNew',
                dataType: "json",
                success: function (result) {
                    if (result['status'] === 'success') {
                        window.location.href = 'index.php?action=cocParameters';
                    } else {
                        saveValidationErrorWindow(result);
                    }
                }
            });
        }

    </script>
{% endblock %}