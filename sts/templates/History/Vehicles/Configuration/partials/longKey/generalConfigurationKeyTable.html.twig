{% block body %}
    <h2>{{ 'vehicles.configuration.partials.generalConfigurationKeyTable.twig.vehKey' | trans }}</h2>
    <div>
        <table class="{{  parameters.historyEvent | historyEventClass }}">
            {% if (parameters.subConfigurationId | historyRawByEventValue(parameters.historyEvent) is not null) %}
                <tr>
                    <th>{{ 'vehicles.configuration.partials.generalConfigurationKeyTable.twig.typeDesignation' | trans }}</th>
                    {{ parameters.typeDesignation | historyValueTd }}
                </tr>
            {% endif %}
            <tr>
                <th>{{ 'vehicles.configuration.show.twig.vehKey' | trans }}</th>
                {{ parameters.vehicleConfigurationKey | historyValueTd }}
            </tr>
            {% if (parameters.subConfigurationId | historyRawByEventValue(parameters.historyEvent) is not null) %}
                <tr>
                    <th>{{ 'vehicles.configuration.partials.descrptionOutOfKey.twig.pentaNumber' | trans }}</th>
                    {{ parameters.pentaNumber | historyValueTd }}
                </tr>
                <tr>
                    <th>{{ 'vehicles.configuration.partials.generalConfigurationKeyTable.twig.shortProdDesc' | trans }}</th>
                    {{ parameters.shortProductionDescription | historyValueTd }}
                </tr>
            {% endif %}
        </table>
    </div>
{% endblock %}